root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[.vscode/*.code-snippets]
insert_final_newline = false

[*.{html,json}]
insert_final_newline = false

[*.go]
indent_style = tab

[*.mk]
indent_style = tab

[go.{mod,work}]
indent_style = tab

[Makefile]
indent_style = tab
