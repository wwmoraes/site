{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "start",
      "type": "shell",
      "command": "hugo",
      "args": [
        "server",
        "-p",
        "8888"
      ],
      "isBackground": true,
      "detail": "Build, serve pages and watches for changes (development mode)",
      "presentation": {
        "echo": false,
        "reveal": "silent",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": true,
        "close": true,
        "revealProblems": "onProblem"
      },
      "problemMatcher": {
        "owner": "hugo",
        "fileLocation": "absolute",
        "pattern": {
          "regexp": "^(WARN|ERROR)\\s+\\d{4}/\\d{2}/\\d{2}\\s+\\d{2}:\\d{2}:\\d{2}\\s+(.*)$",
          "severity": 1,
          "message": 2
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^Start building .* â€¦|Change detected, rebuilding .*\\.$",
          "endsPattern": "^(?:Built in|Total in) \\d+ ms$"
        }
      },
      "options": {
        "statusbar": {
          "label": "$(rocket)"
        }
      }
    },
    {
      "label": "launch",
      "detail": "opens the local server home on the default browser",
      "type": "shell",
      "command": "open",
      "args": [
        "http://localhost:8888"
      ],
      "presentation": {
        "echo": false,
        "reveal": "never",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": true
      },
      "options": {
        "statusbar": {
          "label": "$(globe)"
        }
      }
    },
    {
      "label": "build",
      "detail": "generates the production static files",
      "type": "shell",
      "command": "hugo",
      "options": {
        "statusbar": {
          "label": "$(tools)"
        }
      }
    }
  ]
}
