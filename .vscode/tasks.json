{
  "tasks": [
    {
      "args": [
        "server",
        "--cleanDestinationDir",
        "-p",
        "8888"
      ],
      "command": "hugo",
      "detail": "Build, serve pages and watches for changes (development mode)",
      "isBackground": true,
      "label": "start",
      "options": {
        "statusbar": {
          "label": "$(rocket)"
        }
      },
      "presentation": {
        "clear": true,
        "close": true,
        "echo": false,
        "focus": false,
        "panel": "shared",
        "reveal": "silent",
        "revealProblems": "onProblem",
        "showReuseMessage": false
      },
      "problemMatcher": {
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^Start building .* \u2026|Change detected, rebuilding .*\\.$",
          "endsPattern": "^(?:Built in|Total in) \\d+ ms$"
        },
        "fileLocation": "absolute",
        "owner": "hugo",
        "pattern": {
          "message": 2,
          "regexp": "^(WARN|ERROR)\\s+\\d{4}/\\d{2}/\\d{2}\\s+\\d{2}:\\d{2}:\\d{2}\\s+(.*)$",
          "severity": 1
        }
      },
      "type": "shell"
    },
    {
      "args": [
        "http://localhost:8888"
      ],
      "command": "open",
      "detail": "opens the local server home on the default browser",
      "label": "launch",
      "options": {
        "statusbar": {
          "label": "$(globe)"
        }
      },
      "presentation": {
        "clear": true,
        "echo": false,
        "focus": false,
        "panel": "shared",
        "reveal": "never",
        "showReuseMessage": false
      },
      "type": "shell"
    },
    {
      "command": "hugo",
      "detail": "generates the production static files",
      "label": "build",
      "options": {
        "statusbar": {
          "label": "$(tools)"
        }
      },
      "type": "shell"
    }
  ],
  "version": "2.0.0"
}
