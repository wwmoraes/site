  "version": "0.2.0",
  "configurations": [
    {
      "name": "Radar",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/cmd/site",
      "cwd": "${workspaceFolder}",
      "args": [
        "radar",
        "update"
      ]
    },
    {
      "name": "Books",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/cmd/site",
      "cwd": "${workspaceFolder}",
      "args": [
        "update",
        "goodreads",
        "--list",
        "$GOODREADS_LIST",
        "--shelves",
        "$GOODREADS_SHELVES"
      ],
      "env": {
        "GOODREADS_LIST": "138333248-william",
        "GOODREADS_SHELVES": "currently-reading,read,to-read"
      }
    }
  ]
}